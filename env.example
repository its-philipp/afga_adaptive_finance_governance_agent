# OpenRouter LLM Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Primary Model Configuration
PRIMARY_MODEL=openai/gpt-4o
FALLBACK_MODEL_1=anthropic/claude-3.5-sonnet
FALLBACK_MODEL_2=meta-llama/llama-3.1-70b-instruct

# Langfuse Observability (Optional)
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_HOST=https://cloud.langfuse.com

# Memory Backend Configuration
MEMORY_BACKEND=local
MEMORY_DB_PATH=data/memory.db

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit Configuration
STREAMLIT_PORT=8501
API_BASE_URL=http://localhost:8000/api/v1

# A2A (Agent-to-Agent) Configuration
A2A_ENABLED=true
A2A_BASE_URL=http://localhost:8000
A2A_PAA_PATH=/a2a/paa
A2A_EMA_PATH=/a2a/ema
A2A_API_KEY=
A2A_REQUEST_TIMEOUT=30

# Agent Configuration
TAA_TEMPERATURE=0.3
PAA_TEMPERATURE=0.1
EMA_TEMPERATURE=0.2

# Risk Scoring Thresholds
HIGH_RISK_AMOUNT=10000.0
MEDIUM_RISK_AMOUNT=5000.0
LOW_RISK_AMOUNT=1000.0

# KPI Settings
KPI_CALCULATION_FREQUENCY=daily
KPI_RETENTION_DAYS=90
