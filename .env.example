# Adaptive Finance Governance Agent - Environment Configuration
# Copy this file to .env and fill in your credentials

# ==================== LLM Configuration ====================
OPENROUTER_API_KEY=sk-or-v1-your-key-here
PRIMARY_MODEL=openai/gpt-4o-mini
FALLBACK_MODEL_1=meta-llama/llama-3.1-70b-instruct  
FALLBACK_MODEL_2=mistralai/mistral-large
FALLBACK_MODEL_3=anthropic/claude-3.5-sonnet

# OpenAI (for embeddings and vision)
OPENAI_API_KEY=sk-proj-your-key-here

# ==================== Observability ====================
LANGFUSE_PUBLIC_KEY=pk-lf-your-key-here
LANGFUSE_SECRET_KEY=sk-lf-your-key-here
LANGFUSE_HOST=https://cloud.langfuse.com

# Google AI (optional)
GOOGLE_API_KEY=your-google-api-key

# ==================== A2A (Agent-to-Agent) Configuration ====================
A2A_ENABLED=true
A2A_BASE_URL=http://localhost:8000
A2A_PAA_PATH=/a2a/paa
A2A_EMA_PATH=/a2a/ema
A2A_API_KEY=your-a2a-api-key
A2A_REQUEST_TIMEOUT=30

# ==================== Databricks Configuration ====================
# Databricks SQL Warehouse (for reading embeddings)
DATABRICKS_SERVER_HOSTNAME=adb-xxxxx.azuredatabricks.net
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/xxxxx
DATABRICKS_TOKEN=dapixxxxxxxxxxx
DATABRICKS_CATALOG=afga_dev
DATABRICKS_GOLD_TABLE=afga_dev.gold.finance_transaction_embeddings

# ==================== Azure Storage (for Databricks integration) ====================
# Required for uploading invoices, policies, and audit trails to ADLS Gen2
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccount;AccountKey=yourkey;EndpointSuffix=core.windows.net
AZURE_CONTAINER_INVOICES=raw-transactions
AZURE_CONTAINER_AUDIT=audit-trails

# ==================== Feature Flags ====================
# Enable/disable similarity advisor (Databricks historical pattern matching)
ENABLE_SIMILARITY_ADVISOR=true

# ==================== API Configuration ====================
API_BASE_URL=http://localhost:8000/api/v1
